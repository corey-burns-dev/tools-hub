---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Coin Flip & Dice Roller">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="flex items-center gap-4 mb-8">
        <div
          class="w-16 h-16 rounded-2xl bg-gradient-to-br from-blue-500 to-violet-500 flex items-center justify-center text-4xl shadow-xl shadow-blue-500/20"
        >
          ðŸŽ²
        </div>
        <div>
          <h1 class="text-4xl font-bold text-white mb-2">Coin & Dice</h1>
          <p class="text-slate-400">Flip a coin or roll dice for your games.</p>
        </div>
      </div>

      <!-- Main Content Grid -->
      <div class="grid md:grid-cols-2 gap-6">
        <!-- Coin Flipper -->
        <div
          class="bg-slate-800/50 backdrop-blur-sm rounded-2xl border border-slate-700/50 p-8 shadow-2xl"
        >
          <h2
            class="text-2xl font-bold text-white mb-6 flex items-center gap-2"
          >
            <span class="text-3xl">ðŸª™</span>
            Coin Flipper
          </h2>

          <div class="flex flex-col items-center gap-6">
            <!-- Coin Display -->
            <div class="relative w-48 h-48 perspective-1000">
              <div id="coin" class="coin-container w-full h-full">
                <div class="coin-face coin-heads">
                  <div
                    class="coin-inner bg-linear-to-br from-amber-400 to-amber-600 rounded-full w-full h-full flex items-center justify-center shadow-2xl border-4 border-amber-300"
                  >
                    <span class="text-6xl font-bold text-amber-900">H</span>
                  </div>
                </div>
                <div class="coin-face coin-tails">
                  <div
                    class="coin-inner bg-linear-to-br from-amber-500 to-amber-700 rounded-full w-full h-full flex items-center justify-center shadow-2xl border-4 border-amber-400"
                  >
                    <span class="text-6xl font-bold text-amber-950">T</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Coin Result -->
            <div class="min-h-[40px]">
              <p
                id="coin-result"
                class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-amber-400 to-amber-600"
              >
              </p>
            </div>

            <!-- Coin Controls -->
            <div class="flex flex-col gap-3 w-full">
              <button
                id="flip-coin"
                class="w-full px-6 py-4 bg-linear-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:scale-100"
              >
                Flip Coin
              </button>
              <div class="flex gap-2">
                <button
                  id="flip-multiple"
                  class="flex-1 px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white font-semibold rounded-lg transition-all duration-200"
                >
                  Flip 5x
                </button>
                <button
                  id="flip-ten"
                  class="flex-1 px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white font-semibold rounded-lg transition-all duration-200"
                >
                  Flip 10x
                </button>
              </div>
            </div>

            <!-- Coin Stats -->
            <div class="w-full bg-slate-900/50 rounded-lg p-4">
              <div class="flex justify-between text-sm">
                <div>
                  <p class="text-slate-400">Heads</p>
                  <p id="heads-count" class="text-xl font-bold text-amber-400">
                    0
                  </p>
                </div>
                <div class="text-center">
                  <p class="text-slate-400">Total</p>
                  <p id="coin-total" class="text-xl font-bold text-white">0</p>
                </div>
                <div class="text-right">
                  <p class="text-slate-400">Tails</p>
                  <p id="tails-count" class="text-xl font-bold text-amber-400">
                    0
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Dice Roller -->
        <div
          class="bg-slate-800/50 backdrop-blur-sm rounded-2xl border border-slate-700/50 p-8 shadow-2xl"
        >
          <h2
            class="text-2xl font-bold text-white mb-6 flex items-center gap-2"
          >
            <span class="text-3xl">ðŸŽ²</span>
            Dice Roller
          </h2>

          <div class="flex flex-col items-center gap-6">
            <!-- Dice Display -->
            <div class="grid grid-cols-3 gap-4" id="dice-container">
              <!-- Dice will be rendered here -->
            </div>

            <!-- Dice Result -->
            <div class="min-h-[60px] text-center">
              <p
                id="dice-result"
                class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-violet-600"
              >
              </p>
              <p id="dice-sum" class="text-lg text-slate-400 mt-1"></p>
            </div>

            <!-- Dice Controls -->
            <div class="w-full space-y-3">
              <!-- Number of Dice Selector -->
              <div class="bg-slate-900/50 rounded-lg p-4">
                <label class="text-sm text-slate-400 mb-2 block"
                  >Number of Dice</label
                >
                <div class="flex gap-2">
                  <button
                    class="dice-count-btn flex-1 px-4 py-2 bg-slate-700 hover:bg-blue-600 text-white font-semibold rounded-lg transition-all duration-200"
                    data-count="1">1</button
                  >
                  <button
                    class="dice-count-btn flex-1 px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg"
                    data-count="2">2</button
                  >
                  <button
                    class="dice-count-btn flex-1 px-4 py-2 bg-slate-700 hover:bg-blue-600 text-white font-semibold rounded-lg transition-all duration-200"
                    data-count="3">3</button
                  >
                  <button
                    class="dice-count-btn flex-1 px-4 py-2 bg-slate-700 hover:bg-blue-600 text-white font-semibold rounded-lg transition-all duration-200"
                    data-count="6">6</button
                  >
                </div>
              </div>

              <!-- Dice Type Selector -->
              <div class="bg-slate-900/50 rounded-lg p-4">
                <label class="text-sm text-slate-400 mb-2 block"
                  >Dice Type</label
                >
                <div class="grid grid-cols-4 gap-2">
                  <button
                    class="dice-type-btn px-3 py-2 bg-slate-700 hover:bg-violet-600 text-white font-semibold rounded-lg transition-all duration-200"
                    data-sides="4">D4</button
                  >
                  <button
                    class="dice-type-btn px-3 py-2 bg-violet-600 text-white font-semibold rounded-lg"
                    data-sides="6">D6</button
                  >
                  <button
                    class="dice-type-btn px-3 py-2 bg-slate-700 hover:bg-violet-600 text-white font-semibold rounded-lg transition-all duration-200"
                    data-sides="10">D10</button
                  >
                  <button
                    class="dice-type-btn px-3 py-2 bg-slate-700 hover:bg-violet-600 text-white font-semibold rounded-lg transition-all duration-200"
                    data-sides="20">D20</button
                  >
                </div>
              </div>

              <button
                id="roll-dice"
                class="w-full px-6 py-4 bg-linear-to-r from-blue-500 to-violet-500 hover:from-blue-600 hover:to-violet-600 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:scale-100"
              >
                Roll Dice
              </button>
            </div>

            <!-- Dice History -->
            <div class="w-full bg-slate-900/50 rounded-lg p-4">
              <p class="text-sm text-slate-400 mb-2">Last 5 Rolls</p>
              <div id="dice-history" class="flex flex-wrap gap-2 min-h-[32px]">
                <span class="text-slate-500 text-sm">No rolls yet</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }

  .coin-container {
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.6s;
  }

  .coin-face {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
  }

  .coin-heads {
    transform: rotateY(0deg);
  }

  .coin-tails {
    transform: rotateY(180deg);
  }

  .coin-inner {
    transform-style: preserve-3d;
  }

  @keyframes flipHeads {
    0% {
      transform: rotateY(0deg);
    }
    100% {
      transform: rotateY(1800deg);
    }
  }

  @keyframes flipTails {
    0% {
      transform: rotateY(0deg);
    }
    100% {
      transform: rotateY(1980deg);
    }
  }

  .flip-heads {
    animation: flipHeads 1.5s ease-in-out;
    transform: rotateY(1800deg);
  }

  .flip-tails {
    animation: flipTails 1.5s ease-in-out;
    transform: rotateY(1980deg);
  }

  .dice {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #ef4444, #dc2626);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    font-weight: bold;
    color: white;
    box-shadow:
      0 10px 30px rgba(0, 0, 0, 0.5),
      inset 0 2px 4px rgba(255, 255, 255, 0.3);
    position: relative;
    transform-style: preserve-3d;
  }

  .dice::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 12px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.3), transparent);
    pointer-events: none;
  }

  @keyframes rollDice {
    0% {
      transform: rotate(0deg) scale(1);
    }
    25% {
      transform: rotate(180deg) scale(1.1);
    }
    50% {
      transform: rotate(360deg) scale(1);
    }
    75% {
      transform: rotate(540deg) scale(1.1);
    }
    100% {
      transform: rotate(720deg) scale(1);
    }
  }

  .rolling {
    animation: rollDice 0.8s ease-in-out;
  }

  .dice-small {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: linear-gradient(135deg, #6366f1, #4f46e5);
    border-radius: 6px;
    color: white;
    font-weight: bold;
    font-size: 0.875rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }
</style>

<script>
  // Coin Flipper Logic
  let headsCount = 0;
  let tailsCount = 0;
  let isFlipping = false;

  const coin = document.getElementById("coin");
  const coinResult = document.getElementById("coin-result");
  const flipButton = document.getElementById("flip-coin") as HTMLButtonElement;
  const flipMultipleButton = document.getElementById(
    "flip-multiple",
  ) as HTMLButtonElement;
  const flipTenButton = document.getElementById(
    "flip-ten",
  ) as HTMLButtonElement;
  const headsCountEl = document.getElementById("heads-count");
  const tailsCountEl = document.getElementById("tails-count");
  const coinTotalEl = document.getElementById("coin-total");

  function flipCoin() {
    if (isFlipping) return;
    isFlipping = true;

    flipButton.disabled = true;
    coinResult.textContent = "";

    // Random result
    const result = Math.random() < 0.5 ? "heads" : "tails";

    // Remove previous animation
    coin.classList.remove("flip-heads", "flip-tails");

    // Trigger reflow
    void coin.offsetWidth;

    // Add animation
    coin.classList.add(result === "heads" ? "flip-heads" : "flip-tails");

    setTimeout(() => {
      if (result === "heads") {
        headsCount++;
        coinResult.textContent = "Heads!";
      } else {
        tailsCount++;
        coinResult.textContent = "Tails!";
      }

      updateCoinStats();
      isFlipping = false;
      flipButton.disabled = false;
    }, 1500);
  }

  function updateCoinStats() {
    headsCountEl.textContent = headsCount.toString();
    tailsCountEl.textContent = tailsCount.toString();
    coinTotalEl.textContent = (headsCount + tailsCount).toString();
  }

  async function flipMultipleTimes(times: number) {
    if (isFlipping) return;

    for (let i = 0; i < times; i++) {
      await new Promise((resolve) => {
        flipCoin();
        setTimeout(resolve, 1600);
      });
    }
  }

  flipButton?.addEventListener("click", flipCoin);
  flipMultipleButton?.addEventListener("click", () => flipMultipleTimes(5));
  flipTenButton?.addEventListener("click", () => flipMultipleTimes(10));

  // Dice Roller Logic
  let diceCount = 2;
  let diceSides = 6;
  let diceHistory: number[] = [];
  let isRolling = false;

  const diceContainer = document.getElementById("dice-container");
  const diceResult = document.getElementById("dice-result");
  const diceSum = document.getElementById("dice-sum");
  const rollButton = document.getElementById("roll-dice") as HTMLButtonElement;
  const diceHistoryEl = document.getElementById("dice-history");

  function renderDice(values?: number[]) {
    if (!diceContainer) return;

    diceContainer.innerHTML = "";
    const numDice = values ? values.length : diceCount;

    for (let i = 0; i < numDice; i++) {
      const die = document.createElement("div");
      die.className = "dice";
      die.textContent = values ? values[i].toString() : "?";
      diceContainer.appendChild(die);
    }
  }

  function rollDice() {
    if (isRolling) return;
    isRolling = true;

    rollButton!.disabled = true;
    diceResult!.textContent = "";
    diceSum!.textContent = "";

    // Show rolling animation
    renderDice();
    const dice = diceContainer!.querySelectorAll(".dice");
    dice.forEach((die) => die.classList.add("rolling"));

    setTimeout(() => {
      // Generate random values
      const values: number[] = [];
      for (let i = 0; i < diceCount; i++) {
        values.push(Math.floor(Math.random() * diceSides) + 1);
      }

      // Remove rolling animation
      dice.forEach((die) => die.classList.remove("rolling"));

      // Update display
      renderDice(values);

      const sum = values.reduce((a, b) => a + b, 0);
      diceResult!.textContent = values.join(" + ");
      diceSum!.textContent = `Total: ${sum}`;

      // Update history
      diceHistory.unshift(sum);
      if (diceHistory.length > 5) diceHistory.pop();
      updateDiceHistory();

      isRolling = false;
      rollButton!.disabled = false;
    }, 800);
  }

  function updateDiceHistory() {
    if (!diceHistoryEl) return;

    if (diceHistory.length === 0) {
      diceHistoryEl.innerHTML =
        '<span class="text-slate-500 text-sm">No rolls yet</span>';
    } else {
      diceHistoryEl.innerHTML = diceHistory
        .map((sum) => `<span class="dice-small">${sum}</span>`)
        .join("");
    }
  }

  // Dice count buttons
  document.querySelectorAll(".dice-count-btn").forEach((btn) => {
    btn.addEventListener("click", (e) => {
      const target = e.target as HTMLButtonElement;
      diceCount = parseInt(target.dataset.count || "2");

      // Update active state
      document.querySelectorAll(".dice-count-btn").forEach((b) => {
        b.classList.remove("bg-blue-600");
        b.classList.add("bg-slate-700", "hover:bg-blue-600");
      });
      target.classList.remove("bg-slate-700", "hover:bg-blue-600");
      target.classList.add("bg-blue-600");

      renderDice();
    });
  });

  // Dice type buttons
  document.querySelectorAll(".dice-type-btn").forEach((btn) => {
    btn.addEventListener("click", (e) => {
      const target = e.target as HTMLButtonElement;
      diceSides = parseInt(target.dataset.sides || "6");

      // Update active state
      document.querySelectorAll(".dice-type-btn").forEach((b) => {
        b.classList.remove("bg-violet-600");
        b.classList.add("bg-slate-700", "hover:bg-violet-600");
      });
      target.classList.remove("bg-slate-700", "hover:bg-violet-600");
      target.classList.add("bg-violet-600");

      renderDice();
    });
  });

  rollButton?.addEventListener("click", rollDice);

  // Initialize
  renderDice();
</script>
