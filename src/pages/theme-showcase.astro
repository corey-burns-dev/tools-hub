---
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import ThemePicker from "../components/ThemePicker.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Theme Showcase">
  <div class="space-y-12">
    <div class="animate-fade-in mb-8 flex justify-center">
      <p
        class="rounded-full border border-white/10 bg-white/5 px-6 py-2 text-sm font-medium text-slate-300 backdrop-blur-md transition-all hover:bg-white/10 hover:text-white"
      >
        Explore our design system and component library.
      </p>
    </div>

    <div class="glass relative z-50 flex items-center justify-center gap-4 rounded-2xl p-6">
      <span class="text-muted text-sm font-semibold tracking-wider uppercase">Active Theme:</span>
      <ThemePicker />
    </div>

    <div class="mb-12 grid grid-cols-1 gap-8 lg:grid-cols-2">
      <!-- Typography Section -->
      <section class="space-y-6">
        <h2 class="text-main mb-6 border-b border-white/10 pb-4 text-2xl font-bold">Typography</h2>
        <div class="card-glass space-y-4">
          <h1 class="text-main text-4xl font-extrabold">Heading 1</h1>
          <h2 class="text-main text-3xl font-bold">Heading 2</h2>
          <h3 class="text-main text-2xl font-bold">Heading 3</h3>
          <p class="text-main leading-relaxed">
            This is a standard paragraph using the <code
              class="rounded bg-white/10 px-1 py-0.5 text-sm">text-main</code
            > color. It should be highly legible against the current background. The design system uses
            fluid typography and modern sans-serif fonts for optimal readability.
          </p>
          <p class="text-muted text-sm leading-relaxed">
            This is muted text using <code class="rounded bg-white/10 px-1 py-0.5 text-sm"
              >text-muted</code
            >. It's perfect for secondary information, captions, or less critical content.
          </p>
        </div>
      </section>

      <!-- Buttons Section -->
      <section class="space-y-6">
        <h2 class="text-main mb-6 border-b border-white/10 pb-4 text-2xl font-bold">
          Interactive Elements
        </h2>
        <div class="card-glass space-y-8">
          <div class="space-y-4">
            <h3 class="text-main mb-4 text-lg font-semibold">Buttons</h3>
            <div class="flex flex-wrap gap-4">
              <Button href="#">Primary Action</Button>
              <Button href="#" variant="secondary">Secondary Action</Button>
              <Button href="#" variant="ghost">Ghost Button</Button>
            </div>
          </div>

          <div class="space-y-4">
            <h3 class="text-main mb-4 text-lg font-semibold">Input Fields</h3>
            <div class="space-y-3">
              <input
                type="text"
                placeholder="Standard Input..."
                class="text-main w-full rounded-xl border border-white/10 bg-white/5 px-4 py-3 placeholder-white/30 transition-all focus:border-blue-500/50 focus:ring-2 focus:ring-blue-500/20 focus:outline-none"
              />
              <div class="flex items-center gap-3">
                <input
                  type="checkbox"
                  id="demo-check"
                  class="h-5 w-5 rounded border-white/20 bg-white/5 text-blue-500 focus:ring-blue-500/40"
                  checked
                />
                <label for="demo-check" class="text-main">Checkbox Option</label>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- Cards Section -->
    <section>
      <h2 class="text-main mb-8 border-b border-white/10 pb-4 text-2xl font-bold">Card Variants</h2>
      <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
        <Card href="#" title="Standard Card" class="h-full">
          <div class="p-2">
            <div class="mb-4 text-4xl">âœ¨</div>
            <h3 class="text-main mb-2 text-xl font-bold">Glass Card</h3>
            <p class="text-muted">
              Our standard glass card component with hover lift, light reflection, and smooth
              transition.
            </p>
          </div>
        </Card>

        <Card title="Interactive Card" href="#" class="h-full">
          <div class="p-2">
            <div class="mb-4 text-4xl">ðŸš€</div>
            <h3 class="text-main mb-2 text-xl font-bold">Interactive</h3>
            <p class="text-muted">
              Fully clickable card that acts as a link. Notice the scale effect and glow on hover.
            </p>
          </div>
        </Card>

        <div class="card-glass group relative overflow-hidden">
          <div
            class="absolute inset-0 bg-linear-to-br from-blue-500/10 to-purple-500/10 opacity-0 transition-opacity duration-500 group-hover:opacity-100"
          >
          </div>
          <div class="relative z-10 p-2">
            <div class="mb-4 text-4xl">ðŸŽ¨</div>
            <h3 class="text-main mb-2 text-xl font-bold">Gradient Overlay</h3>
            <p class="text-muted">
              A standard div using the <code>card-glass</code> utility class with a custom gradient hover
              effect.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Palette Reference -->
    <section class="mt-16 border-t border-white/5 pt-8">
      <h2 class="text-muted mb-8 text-xl font-bold tracking-widest uppercase">Theme Palette</h2>
      <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
        <div class="space-y-2">
          <div class="h-20 rounded-xl bg-[var(--color-primary)] shadow-lg"></div>
          <p class="text-muted text-center font-mono text-xs">--color-primary</p>
        </div>
        <div class="space-y-2">
          <div class="h-20 rounded-xl bg-[var(--color-secondary)] shadow-lg"></div>
          <p class="text-muted text-center font-mono text-xs">--color-secondary</p>
        </div>
        <div class="space-y-2">
          <div class="h-20 rounded-xl bg-[var(--color-accent)] shadow-lg"></div>
          <p class="text-muted text-center font-mono text-xs">--color-accent</p>
        </div>
        <div class="space-y-2">
          <div class="h-20 rounded-xl border border-white/10 bg-[var(--bg-main)] shadow-lg"></div>
          <p class="text-muted text-center font-mono text-xs">--bg-main</p>
        </div>
      </div>
    </section>
  </div>
</Layout>
