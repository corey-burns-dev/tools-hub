---
import memesData from "../data/memes.json";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Meme Generator">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
      <div class="flex items-center gap-4 mb-8">
        <div
          class="w-16 h-16 rounded-2xl bg-linear-to-br from-blue-500 to-violet-500 flex items-center justify-center text-4xl shadow-xl shadow-blue-500/20"
        >
          üê∏
        </div>
        <div>
          <h1 class="text-4xl font-bold text-white mb-2">Meme Generator</h1>
          <p class="text-slate-400">
            Create meme masterpieces with custom text overlays.
          </p>
        </div>
      </div>

      <div
        id="meme-generator-container"
        class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start"
        data-memes={JSON.stringify(memesData)}
      >
        <!-- Preview Area -->
        <div
          class="bg-slate-800/50 backdrop-blur-sm rounded-2xl border border-slate-700/50 p-0 overflow-hidden sticky top-8 shadow-2xl"
        >
          <div
            class="p-4 border-b border-white/10 flex items-center justify-between"
          >
            <h2 class="text-lg font-bold text-white">Preview</h2>
            <div class="flex gap-2">
              <button
                id="toggle-edit-mode"
                class="px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg text-sm font-bold transition-all"
                title="Toggle text editing on canvas"
              >
                ‚úèÔ∏è Edit Mode
              </button>
              <button
                id="download-btn"
                class="px-4 py-2 bg-gradient-to-r from-blue-500 to-violet-500 hover:from-blue-600 hover:to-violet-600 text-white rounded-lg text-sm font-bold transition-all shadow-lg"
              >
                üíæ Download
              </button>
            </div>
          </div>
          <div
            id="canvas-wrapper"
            class="aspect-square bg-slate-900/50 flex items-center justify-center p-4 relative"
          >
            <canvas
              id="meme-canvas"
              class="max-w-full max-h-full rounded-lg shadow-2xl cursor-default"
            ></canvas>
            <div
              id="edit-hint"
              class="hidden absolute top-8 left-1/2 transform -translate-x-1/2 bg-blue-500 text-white px-4 py-2 rounded-lg text-sm font-semibold shadow-lg"
            >
              Click on text to move it around
            </div>
          </div>
        </div>

        <!-- Controls Area -->
        <div class="space-y-6">
          <!-- Image Source -->
          <div
            class="bg-slate-800/50 backdrop-blur-sm rounded-2xl border border-slate-700/50 p-6 shadow-2xl"
          >
            <h3
              class="text-lg font-bold text-white mb-4 flex items-center gap-2"
            >
              <span>üñºÔ∏è</span> Image Source
            </h3>
            <div class="space-y-4">
              <label class="block">
                <span
                  class="text-sm font-semibold text-slate-400 uppercase tracking-wider mb-2 block"
                  >Upload Your Own Image</span
                >
                <input
                  type="file"
                  id="image-upload"
                  accept="image/*"
                  class="block w-full text-sm text-slate-400
                    file:mr-4 file:py-2 file:px-4
                    file:rounded-full file:border-0
                    file:text-sm file:font-bold
                    file:bg-gradient-to-r file:from-blue-500 file:to-violet-500
                    file:text-white hover:file:opacity-90 cursor-pointer"
                />
              </label>

              <div class="pt-4 border-t border-white/5">
                <div class="flex items-center justify-between mb-3">
                  <span
                    class="text-sm font-semibold text-slate-400 uppercase tracking-wider"
                    >Popular Meme Templates</span
                  >
                  <button
                    id="refresh-memes"
                    class="text-xs px-3 py-1 bg-slate-700 hover:bg-slate-600 text-white rounded-full transition-all"
                  >
                    üîÑ Refresh
                  </button>
                </div>

                <!-- Search Box -->
                <input
                  type="text"
                  id="meme-search"
                  placeholder="Search memes..."
                  class="w-full mb-3 bg-slate-900/50 border border-white/10 rounded-lg px-3 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-blue-500/50 transition-all"
                />

                <!-- Loading State -->
                <div id="memes-loading" class="text-center py-8">
                  <div
                    class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500"
                  >
                  </div>
                  <p class="text-slate-400 text-sm mt-2">Loading memes...</p>
                </div>

                <!-- Memes Grid -->
                <div
                  id="memes-grid"
                  class="grid grid-cols-3 gap-2 max-h-[500px] overflow-y-auto pr-2 custom-scrollbar hidden"
                >
                  <!-- Memes will be loaded here -->
                </div>
              </div>
            </div>
          </div>

          <!-- Text Boxes Manager -->
          <div
            class="bg-slate-800/50 backdrop-blur-sm rounded-2xl border border-slate-700/50 p-6 shadow-2xl"
          >
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-bold text-white flex items-center gap-2">
                <span>‚úçÔ∏è</span> Text Boxes
              </h3>
              <button
                id="add-text-box"
                class="px-3 py-1 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm font-bold transition-all"
              >
                + Add Text
              </button>
            </div>

            <div id="text-boxes-container" class="space-y-4">
              <!-- Text boxes will be dynamically added here -->
            </div>
          </div>

          <!-- Global Text Settings -->
          <div
            class="bg-slate-800/50 backdrop-blur-sm rounded-2xl border border-slate-700/50 p-6 shadow-2xl"
          >
            <h3
              class="text-lg font-bold text-white mb-4 flex items-center gap-2"
            >
              <span>üé®</span> Global Text Settings
            </h3>
            <div class="space-y-4">
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label
                    class="text-sm font-semibold text-slate-400 uppercase tracking-wider mb-2 block"
                    >Font Size</label
                  >
                  <input
                    type="range"
                    id="global-font-size"
                    min="20"
                    max="100"
                    value="40"
                    class="w-full accent-blue-500"
                  />
                  <span
                    id="global-font-size-value"
                    class="text-xs text-slate-500">40px</span
                  >
                </div>
                <div>
                  <label
                    class="text-sm font-semibold text-slate-400 uppercase tracking-wider mb-2 block"
                    >Text Color</label
                  >
                  <input
                    type="color"
                    id="global-text-color"
                    value="#ffffff"
                    class="w-full h-10 bg-transparent border border-white/10 rounded cursor-pointer"
                  />
                </div>
              </div>

              <div>
                <label
                  class="text-sm font-semibold text-slate-400 uppercase tracking-wider mb-2 block"
                  >Stroke Width</label
                >
                <input
                  type="range"
                  id="global-stroke-width"
                  min="0"
                  max="10"
                  value="3"
                  class="w-full accent-blue-500"
                />
                <span
                  id="global-stroke-width-value"
                  class="text-xs text-slate-500">3px</span
                >
              </div>

              <div class="pt-2">
                <button
                  id="reset-positions"
                  class="w-full px-4 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg text-sm font-bold transition-all"
                >
                  üîÑ Reset All Positions
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    .custom-scrollbar::-webkit-scrollbar {
      width: 8px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
      background: rgba(15, 23, 42, 0.5);
      border-radius: 4px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
      background: rgba(100, 116, 139, 0.5);
      border-radius: 4px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
      background: rgba(100, 116, 139, 0.7);
    }

    .meme-template {
      transition: all 0.2s;
      cursor: pointer;
      position: relative;
      overflow: hidden;
    }

    .meme-template:hover {
      transform: scale(1.05);
      z-index: 10;
    }

    .meme-template.selected {
      ring: 2px;
      ring-color: rgb(59, 130, 246);
    }

    .meme-template img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .meme-name {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
      padding: 8px 4px 4px;
      font-size: 0.65rem;
      color: white;
      text-align: center;
      opacity: 0;
      transition: opacity 0.2s;
    }

    .meme-template:hover .meme-name {
      opacity: 1;
    }

    .text-box-card {
      transition: all 0.2s;
    }

    .text-box-card.active {
      border-color: rgb(59, 130, 246);
      background: rgba(59, 130, 246, 0.1);
    }

    #meme-canvas.edit-mode {
      cursor: move;
    }
  </style>

  <script>
    const container = document.getElementById("meme-generator-container");
    const memesData = JSON.parse(container?.dataset.memes || "[]");

    const canvas = document.getElementById("meme-canvas") as HTMLCanvasElement;
    const ctx = canvas.getContext("2d");
    const canvasWrapper = document.getElementById("canvas-wrapper");
    const imageUpload = document.getElementById(
      "image-upload",
    ) as HTMLInputElement;
    const downloadBtn = document.getElementById("download-btn");
    const memesGrid = document.getElementById("memes-grid");
    const memesLoading = document.getElementById("memes-loading");
    const memeSearch = document.getElementById(
      "meme-search",
    ) as HTMLInputElement;
    const refreshBtn = document.getElementById("refresh-memes");
    const addTextBoxBtn = document.getElementById("add-text-box");
    const textBoxesContainer = document.getElementById("text-boxes-container");
    const toggleEditModeBtn = document.getElementById(
      "toggle-edit-mode",
    ) as HTMLButtonElement;
    const editHint = document.getElementById("edit-hint");
    const resetPositionsBtn = document.getElementById("reset-positions");

    // Global settings
    const globalFontSizeInput = document.getElementById(
      "global-font-size",
    ) as HTMLInputElement;
    const globalFontSizeValue = document.getElementById(
      "global-font-size-value",
    );
    const globalStrokeWidthInput = document.getElementById(
      "global-stroke-width",
    ) as HTMLInputElement;
    const globalStrokeWidthValue = document.getElementById(
      "global-stroke-width-value",
    );
    const globalTextColorInput = document.getElementById(
      "global-text-color",
    ) as HTMLInputElement;

    let currentImg: HTMLImageElement | null = null;
    const allMemes = memesData;
    let editMode = false;
    let draggedTextBox: TextBox | null = null;
    let dragOffset = { x: 0, y: 0 };

    interface TextBox {
      id: number;
      text: string;
      x: number; // Percentage (0-100)
      y: number; // Percentage (0-100)
      fontSize?: number;
      color?: string;
      strokeWidth?: number;
    }

    let textBoxes: TextBox[] = [];
    let nextTextBoxId = 1;

    // Predefined templates for popular memes
    const memeTemplates: Record<string, TextBox[]> = {
      // Drake meme - top disapprove, bottom approve
      "181913649": [
        { id: 1, text: "", x: 70, y: 25 },
        { id: 2, text: "", x: 70, y: 75 },
      ],
      // Distracted Boyfriend - left, center, right
      "112126428": [
        { id: 1, text: "", x: 20, y: 70 },
        { id: 2, text: "", x: 45, y: 45 },
        { id: 3, text: "", x: 75, y: 55 },
      ],
      // Two Buttons - top and two buttons
      "87743020": [
        { id: 1, text: "", x: 25, y: 70 },
        { id: 2, text: "", x: 55, y: 65 },
        { id: 3, text: "", x: 50, y: 15 },
      ],
      // Expanding Brain - 4 panels
      "93895088": [
        { id: 1, text: "", x: 30, y: 12 },
        { id: 2, text: "", x: 30, y: 37 },
        { id: 3, text: "", x: 30, y: 62 },
        { id: 4, text: "", x: 30, y: 87 },
      ],
      // Batman Slapping Robin
      "438680": [
        { id: 1, text: "", x: 30, y: 25 },
        { id: 2, text: "", x: 75, y: 75 },
      ],
      // Change My Mind
      "129242436": [{ id: 1, text: "", x: 35, y: 65 }],
      // Woman Yelling at Cat
      "188390779": [
        { id: 1, text: "", x: 25, y: 75 },
        { id: 2, text: "", x: 75, y: 75 },
      ],
      // Anakin Padme 4 Panel
      "322841258": [
        { id: 1, text: "", x: 25, y: 25 },
        { id: 2, text: "", x: 75, y: 25 },
        { id: 3, text: "", x: 75, y: 75 },
      ],
      // Bernie Sanders Once Again Asking
      "224015000": [{ id: 1, text: "", x: 50, y: 85 }],
      // Hide the Pain Harold
      "27813981": [{ id: 1, text: "", x: 50, y: 90 }],
      // This Is Fine
      "55311130": [{ id: 1, text: "", x: 50, y: 90 }],
      // Futurama Fry
      "61520": [
        { id: 1, text: "", x: 50, y: 10 },
        { id: 2, text: "", x: 50, y: 90 },
      ],
      // Spider Man Triple
      "206151308": [
        { id: 1, text: "", x: 20, y: 50 },
        { id: 2, text: "", x: 50, y: 40 },
        { id: 3, text: "", x: 80, y: 50 },
      ],
    };

    // Default template (distributed vertically based on box count)
    function getDefaultTextBoxes(boxCount: number = 2): TextBox[] {
      const boxes: TextBox[] = [];
      for (let i = 0; i < boxCount; i++) {
        // Distribute boxes vertically: 10%, 90% for 2 boxes, or more spread out for more
        let y = 10;
        if (boxCount > 1) {
          y = 10 + (i * 80) / (boxCount - 1);
        }
        boxes.push({ id: nextTextBoxId++, text: "", x: 50, y });
      }
      return boxes;
    }

    // Initialize with default or template-specific text boxes
    function initializeTextBoxes(memeId?: string) {
      textBoxes = [];
      nextTextBoxId = 1;

      if (memeId && memeTemplates[memeId]) {
        // Use predefined high-quality template
        textBoxes = memeTemplates[memeId].map((box) => ({
          ...box,
          id: nextTextBoxId++,
        }));
      } else {
        // Smarter default using the meme metadata box_count
        const meme = allMemes.find((m: any) => m.id === memeId);
        const boxCount = meme?.box_count || 2;
        textBoxes = getDefaultTextBoxes(boxCount);
      }

      renderTextBoxControls();
      drawMeme();
    }

    // Render text box controls
    function renderTextBoxControls() {
      if (!textBoxesContainer) return;

      textBoxesContainer.innerHTML = textBoxes
        .map(
          (box, index) => `
        <div class="text-box-card bg-slate-900/30 border border-slate-700 rounded-lg p-4" data-box-id="${box.id}">
          <div class="flex items-center justify-between mb-2">
            <label class="text-sm font-semibold text-slate-300">Text ${index + 1}</label>
            <button class="remove-text-box text-red-400 hover:text-red-300 text-sm" data-box-id="${box.id}">
              ‚úï Remove
            </button>
          </div>
          <input
            type="text"
            class="text-box-input w-full bg-slate-800 border border-slate-600 rounded-lg px-3 py-2 text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500/50 transition-all uppercase"
            placeholder="ENTER TEXT"
            data-box-id="${box.id}"
            value="${box.text}"
          />
          <div class="mt-2 text-xs text-slate-500">
            Position: ${Math.round(box.x)}%, ${Math.round(box.y)}%
          </div>
        </div>
      `,
        )
        .join("");

      // Add event listeners
      document.querySelectorAll(".text-box-input").forEach((input) => {
        input.addEventListener("input", (e) => {
          const boxId = parseInt(
            (e.target as HTMLElement).dataset.boxId || "0",
          );
          const box = textBoxes.find((b) => b.id === boxId);
          if (box) {
            box.text = (e.target as HTMLInputElement).value;
            drawMeme();
          }
        });

        input.addEventListener("focus", (e) => {
          const boxId = parseInt(
            (e.target as HTMLElement).dataset.boxId || "0",
          );
          highlightTextBox(boxId);
        });
      });

      document.querySelectorAll(".remove-text-box").forEach((btn) => {
        btn.addEventListener("click", (e) => {
          const boxId = parseInt(
            (e.target as HTMLElement).dataset.boxId || "0",
          );
          removeTextBox(boxId);
        });
      });
    }

    function highlightTextBox(boxId: number) {
      document.querySelectorAll(".text-box-card").forEach((card) => {
        card.classList.remove("active");
      });
      const card = document.querySelector(`[data-box-id="${boxId}"]`);
      if (card) {
        card.classList.add("active");
      }
    }

    function addTextBox() {
      const newBox: TextBox = {
        id: nextTextBoxId++,
        text: "",
        x: 50,
        y: 50,
      };
      textBoxes.push(newBox);
      renderTextBoxControls();
      drawMeme();
    }

    function removeTextBox(boxId: number) {
      textBoxes = textBoxes.filter((b) => b.id !== boxId);
      renderTextBoxControls();
      drawMeme();
    }

    // Display initial memes
    displayMemes(allMemes);

    // Display memes in grid
    function displayMemes(memes: any[]) {
      if (!memesGrid) return;

      // Hide loading, show grid
      memesLoading?.classList.add("hidden");
      memesGrid?.classList.remove("hidden");

      const popularMemes = memes.slice(0, 100);

      memesGrid.innerHTML = popularMemes
        .map(
          (meme) => `
        <div class="meme-template aspect-square rounded-lg overflow-hidden bg-slate-700 border border-slate-600 hover:border-blue-500" data-url="${meme.localUrl || meme.url}" data-name="${meme.name}" data-id="${meme.id}">
          <img src="${meme.localUrl || meme.url}" alt="${meme.name}" loading="lazy" />
          <div class="meme-name">${meme.name}</div>
        </div>
      `,
        )
        .join("");

      document.querySelectorAll(".meme-template").forEach((template) => {
        template.addEventListener("click", () => {
          const url = (template as HTMLElement).dataset.url;
          const memeId = (template as HTMLElement).dataset.id;
          if (url) {
            loadMemeTemplate(url, memeId);

            document
              .querySelectorAll(".meme-template")
              .forEach((t) => t.classList.remove("selected"));
            template.classList.add("selected");
          }
        });
      });
    }

    // Search memes
    memeSearch?.addEventListener("input", (e) => {
      const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();

      if (!searchTerm) {
        displayMemes(allMemes);
        return;
      }

      const filtered = allMemes.filter((meme) =>
        meme.name.toLowerCase().includes(searchTerm),
      );

      displayMemes(filtered);
    });

    refreshBtn?.addEventListener("click", () => displayMemes(allMemes));

    function loadMemeTemplate(url: string, memeId?: string) {
      const img = new Image();
      img.crossOrigin = "anonymous";
      img.onload = () => {
        currentImg = img;
        initializeTextBoxes(memeId);
      };
      img.onerror = () => {
        const img2 = new Image();
        img2.onload = () => {
          currentImg = img2;
          initializeTextBoxes(memeId);
        };
        img2.src = url;
      };
      img.src = url;
    }

    function drawMeme() {
      if (!ctx || !currentImg) return;

      const maxWidth = 800;
      const ratio = currentImg.width / currentImg.height;
      canvas.width = Math.min(currentImg.width, maxWidth);
      canvas.height = canvas.width / ratio;

      // Draw Image
      ctx.drawImage(currentImg, 0, 0, canvas.width, canvas.height);

      // Draw all text boxes
      textBoxes.forEach((box) => {
        const fontSize = box.fontSize || parseInt(globalFontSizeInput.value);
        const strokeWidth =
          box.strokeWidth || parseInt(globalStrokeWidthInput.value);
        const color = box.color || globalTextColorInput.value;

        ctx.fillStyle = color;
        ctx.strokeStyle = "black";
        ctx.lineWidth = strokeWidth;
        ctx.textAlign = "center";
        ctx.font = `bold ${fontSize}px Impact, Arial Black, sans-serif`;
        ctx.lineJoin = "round";
        ctx.textBaseline = "middle";

        const x = (box.x / 100) * canvas.width;
        const y = (box.y / 100) * canvas.height;

        if (box.text) {
          // Draw multiple strokes for better outline
          for (let i = 0; i < 3; i++) {
            ctx.strokeText(box.text.toUpperCase(), x, y);
          }
          ctx.fillText(box.text.toUpperCase(), x, y);
        }
      });
    }

    // Edit mode - drag text boxes
    toggleEditModeBtn?.addEventListener("click", () => {
      editMode = !editMode;
      if (editMode) {
        canvas.classList.add("edit-mode");
        toggleEditModeBtn.classList.add("bg-blue-600");
        toggleEditModeBtn.classList.remove("bg-slate-700");
        editHint?.classList.remove("hidden");
        setTimeout(() => editHint?.classList.add("hidden"), 3000);
      } else {
        canvas.classList.remove("edit-mode");
        toggleEditModeBtn.classList.remove("bg-blue-600");
        toggleEditModeBtn.classList.add("bg-slate-700");
      }
    });

    canvas.addEventListener("mousedown", (e) => {
      if (!editMode) return;

      const rect = canvas.getBoundingClientRect();
      const scaleX = canvas.width / rect.width;
      const scaleY = canvas.height / rect.height;
      const clickX = (e.clientX - rect.left) * scaleX;
      const clickY = (e.clientY - rect.top) * scaleY;

      // Find clicked text box (reverse order to prioritize top boxes)
      for (let i = textBoxes.length - 1; i >= 0; i--) {
        const box = textBoxes[i];
        const x = (box.x / 100) * canvas.width;
        const y = (box.y / 100) * canvas.height;
        const fontSize = box.fontSize || parseInt(globalFontSizeInput.value);

        // Rough hit detection (can be improved)
        const hitRadius = fontSize * 2;
        if (
          Math.abs(clickX - x) < hitRadius &&
          Math.abs(clickY - y) < hitRadius
        ) {
          draggedTextBox = box;
          dragOffset = { x: clickX - x, y: clickY - y };
          highlightTextBox(box.id);
          break;
        }
      }
    });

    canvas.addEventListener("mousemove", (e) => {
      if (!editMode || !draggedTextBox) return;

      const rect = canvas.getBoundingClientRect();
      const scaleX = canvas.width / rect.width;
      const scaleY = canvas.height / rect.height;
      const mouseX = (e.clientX - rect.left) * scaleX;
      const mouseY = (e.clientY - rect.top) * scaleY;

      draggedTextBox.x = ((mouseX - dragOffset.x) / canvas.width) * 100;
      draggedTextBox.y = ((mouseY - dragOffset.y) / canvas.height) * 100;

      // Clamp to canvas
      draggedTextBox.x = Math.max(0, Math.min(100, draggedTextBox.x));
      draggedTextBox.y = Math.max(0, Math.min(100, draggedTextBox.y));

      renderTextBoxControls();
      drawMeme();
    });

    canvas.addEventListener("mouseup", () => {
      draggedTextBox = null;
    });

    canvas.addEventListener("mouseleave", () => {
      draggedTextBox = null;
    });

    // Image upload handler
    imageUpload.addEventListener("change", (e) => {
      const file = (e.target as HTMLInputElement).files?.[0];
      if (!file) return;

      const reader = new FileReader();
      reader.onload = (event) => {
        const img = new Image();
        img.onload = () => {
          currentImg = img;
          initializeTextBoxes();
          document
            .querySelectorAll(".meme-template")
            .forEach((t) => t.classList.remove("selected"));
        };
        img.src = event.target?.result as string;
      };
      reader.readAsDataURL(file);
    });

    // Global settings
    [globalFontSizeInput, globalStrokeWidthInput, globalTextColorInput].forEach(
      (el) => {
        el?.addEventListener("input", () => {
          drawMeme();
          if (globalFontSizeValue) {
            globalFontSizeValue.textContent = `${globalFontSizeInput.value}px`;
          }
          if (globalStrokeWidthValue) {
            globalStrokeWidthValue.textContent = `${globalStrokeWidthInput.value}px`;
          }
        });
      },
    );

    addTextBoxBtn?.addEventListener("click", addTextBox);

    resetPositionsBtn?.addEventListener("click", () => {
      if (confirm("Reset all text positions to default?")) {
        const currentMemeId = document
          .querySelector(".meme-template.selected")
          ?.getAttribute("data-id");
        initializeTextBoxes(currentMemeId || undefined);
      }
    });

    // Download handler
    downloadBtn?.addEventListener("click", () => {
      const link = document.createElement("a");
      const timestamp = new Date().getTime();
      link.download = `meme-${timestamp}.png`;
      link.href = canvas.toDataURL();
      link.click();
    });

    // Initialize
    window.addEventListener("load", () => {
      // Load first meme by default
      if (allMemes.length > 0) {
        loadMemeTemplate(allMemes[0].localUrl, allMemes[0].id);
      }
    });
  </script>
</Layout>
