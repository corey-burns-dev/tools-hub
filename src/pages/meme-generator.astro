  // Default template (distributed vertically based on box count)
  function getDefaultTextBoxes(boxCount: number = 2): TextBox[] {
    const boxes: TextBox[] = [];
    for (let i = 0; i < boxCount; i++) {
      // Distribute boxes vertically: 10%, 90% for 2 boxes, or more spread out for more
      let y = 10;
      if (boxCount > 1) {
        y = 10 + (i * 80) / (boxCount - 1);
      }
      boxes.push({ id: nextTextBoxId++, text: "", x: 50, y });
    }
    return boxes;
  }

  // Initialize with default or template-specific text boxes
  function initializeTextBoxes(memeId?: string) {
    textBoxes = [];
    nextTextBoxId = 1;

    if (memeId && memeTemplates[memeId]) {
      // Use predefined high-quality template
      textBoxes = memeTemplates[memeId].map((box) => ({
        ...box,
        id: nextTextBoxId++,
      }));
    } else {
      // Smarter default using the meme metadata box_count
      const meme = allMemes.find((m: { id: string; box_count?: number }) => m.id === memeId);
      const boxCount = meme?.box_count || 2;
      textBoxes = getDefaultTextBoxes(boxCount);
    }

    renderTextBoxControls();
    drawMeme();
  }

  // Render text box controls
  function renderTextBoxControls() {
    if (!textBoxesContainer) return;

    textBoxesContainer.innerHTML = textBoxes
      .map(
        (box, index) => `
        <div class="text-box-card bg-slate-900/30 border border-slate-700 rounded-lg p-4" data-box-id="${box.id}">
          <div class="flex items-center justify-between mb-2">
            <label class="text-sm font-semibold text-slate-300">Text ${index + 1}</label>
            <button class="remove-text-box text-red-400 hover:text-red-300 text-sm" data-box-id="${box.id}">
              ‚úï Remove
            </button>
          </div>
          <input
            type="text"
            class="text-box-input w-full bg-slate-800 border border-slate-600 rounded-lg px-3 py-2 text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500/50 transition-all uppercase"
            placeholder="ENTER TEXT"
            data-box-id="${box.id}"
            value="${box.text}"
          />
          <div class="mt-2 text-xs text-slate-500">
            Position: ${Math.round(box.x)}%, ${Math.round(box.y)}%
          </div>
        </div>
      `
      )
      .join("");

    // Add event listeners
    document.querySelectorAll(".text-box-input").forEach((input) => {
      input.addEventListener("input", (e) => {
        const boxId = parseInt((e.target as HTMLElement).dataset.boxId || "0");
        const box = textBoxes.find((b) => b.id === boxId);
        if (box) {
          box.text = (e.target as HTMLInputElement).value;
          drawMeme();
        }
      });

      input.addEventListener("focus", (e) => {
        const boxId = parseInt((e.target as HTMLElement).dataset.boxId || "0");
        highlightTextBox(boxId);
      });
    });

    document.querySelectorAll(".remove-text-box").forEach((btn) => {
      btn.addEventListener("click", (e) => {
        const boxId = parseInt((e.target as HTMLElement).dataset.boxId || "0");
        removeTextBox(boxId);
      });
    });
  }

  function highlightTextBox(boxId: number) {
    document.querySelectorAll(".text-box-card").forEach((card) => {
      card.classList.remove("active");
    });
    const card = document.querySelector(`[data-box-id="${boxId}"]`);
    if (card) {
      card.classList.add("active");
    }
  }

  function addTextBox() {
    const newBox: TextBox = {
      id: nextTextBoxId++,
      text: "",
      x: 50,
      y: 50,
    };
    textBoxes.push(newBox);
    renderTextBoxControls();
    drawMeme();
  }

  function removeTextBox(boxId: number) {
    textBoxes = textBoxes.filter((b) => b.id !== boxId);
    renderTextBoxControls();
    drawMeme();
  }

  // Display initial memes
  displayMemes(allMemes);

  // Display memes in grid
  function displayMemes(memes: { id: string; name: string; url: string; localUrl?: string }[]) {
    if (!memesGrid) return;

    // Hide loading, show grid
    memesLoading?.classList.add("hidden");
    memesGrid?.classList.remove("hidden");

    const popularMemes = memes.slice(0, 100);

    memesGrid.innerHTML = popularMemes
      .map(
        (meme) => `
        <div class="meme-template aspect-square rounded-lg overflow-hidden bg-slate-700 border border-slate-600 hover:border-blue-500" data-url="${meme.localUrl || meme.url}" data-name="${meme.name}" data-id="${meme.id}">
          <img src="${meme.localUrl || meme.url}" alt="${meme.name}" loading="lazy" />
          <div class="meme-name">${meme.name}</div>
        </div>
      `
      )
      .join("");

    document.querySelectorAll(".meme-template").forEach((template) => {
      template.addEventListener("click", () => {
        const url = (template as HTMLElement).dataset.url;
        const memeId = (template as HTMLElement).dataset.id;
        if (url) {
          loadMemeTemplate(url, memeId);

          document
            .querySelectorAll(".meme-template")
            .forEach((t) => t.classList.remove("selected"));
          template.classList.add("selected");
        }
      });
    });
  }

  // Search memes
  memeSearch?.addEventListener("input", (e) => {
    const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();

    if (!searchTerm) {
      displayMemes(allMemes);
      return;
    }

    const filtered = allMemes.filter(
      (meme: { id: string; name: string; url: string; localUrl?: string }) =>
        meme.name.toLowerCase().includes(searchTerm)
    );

    displayMemes(filtered);
  });

  refreshBtn?.addEventListener("click", () => displayMemes(allMemes));

  function loadMemeTemplate(url: string, memeId?: string) {
    const img = new Image();
    img.crossOrigin = "anonymous";
    img.onload = () => {
      currentImg = img;
      initializeTextBoxes(memeId);
    };
    img.onerror = () => {
      const img2 = new Image();
      img2.onload = () => {
        currentImg = img2;
        initializeTextBoxes(memeId);
      };
      img2.src = url;
    };
    img.src = url;
  }

  function drawMeme() {
    if (!ctx || !currentImg) return;

    const maxWidth = 800;
    const ratio = currentImg.width / currentImg.height;
    canvas.width = Math.min(currentImg.width, maxWidth);
    canvas.height = canvas.width / ratio;

    // Draw Image
    ctx.drawImage(currentImg, 0, 0, canvas.width, canvas.height);

    // Draw all text boxes
    textBoxes.forEach((box) => {
      const fontSize = box.fontSize || parseInt(globalFontSizeInput.value);
      const strokeWidth = box.strokeWidth || parseInt(globalStrokeWidthInput.value);
      const color = box.color || globalTextColorInput.value;

      ctx.fillStyle = color;
      ctx.strokeStyle = "black";
      ctx.lineWidth = strokeWidth;
      ctx.textAlign = "center";
      ctx.font = `bold ${fontSize}px Impact, Arial Black, sans-serif`;
      ctx.lineJoin = "round";
      ctx.textBaseline = "middle";

      const x = (box.x / 100) * canvas.width;
      const y = (box.y / 100) * canvas.height;

      if (box.text) {
        for (let i = 0; i < 3; i++) {
          ctx.strokeText(box.text.toUpperCase(), x, y);
        }
        ctx.fillText(box.text.toUpperCase(), x, y);
      }

      // Draw edit handles if in edit mode
      if (editMode) {
        ctx.save();
        // Draw bounding box
        const metrics = ctx.measureText(box.text.toUpperCase() || "TEXT " + box.id);
        const height = fontSize * 1.2;
        const width = Math.max(metrics.width + 20, 100); // Min width for empty
        const top = y - height / 2;
        const left = x - width / 2;

        ctx.strokeStyle = draggedTextBox?.id === box.id ? "#3b82f6" : "#94a3b8";
        ctx.lineWidth = 2;
        ctx.setLineDash([5, 5]);
        ctx.strokeRect(left, top, width, height);

        // Draw resize handle (bottom-right)
        ctx.fillStyle = draggedTextBox?.id === box.id ? "#3b82f6" : "#94a3b8";
        ctx.fillRect(left + width - 6, top + height - 6, 12, 12);

        ctx.restore();
      }
    });
  }

  // Edit mode - drag text boxes
  toggleEditModeBtn?.addEventListener("click", () => {
    editMode = !editMode;
    if (editMode) {
      canvas.classList.add("edit-mode");
      toggleEditModeBtn.classList.add("bg-blue-600");
      toggleEditModeBtn.classList.remove("bg-slate-700");
      editHint?.classList.remove("hidden");
      setTimeout(() => editHint?.classList.add("hidden"), 3000);
    } else {
      canvas.classList.remove("edit-mode");
      toggleEditModeBtn.classList.remove("bg-blue-600");
      toggleEditModeBtn.classList.add("bg-slate-700");
    }
  });

  canvas.addEventListener("mousedown", (e) => {
    if (!editMode || !ctx) return;

    const rect = canvas.getBoundingClientRect();
    const scaleX = canvas.width / rect.width;
    const scaleY = canvas.height / rect.height;
    const clickX = (e.clientX - rect.left) * scaleX;
    const clickY = (e.clientY - rect.top) * scaleY;

    // Check for resize handle click first
    for (let i = textBoxes.length - 1; i >= 0; i--) {
      const box = textBoxes[i];
      const fontSize = box.fontSize || parseInt(globalFontSizeInput.value);
      const x = (box.x / 100) * canvas.width;
      const y = (box.y / 100) * canvas.height;

      // Calculate box dimensions
      ctx.font = `bold ${fontSize}px Impact, Arial Black, sans-serif`;
      const metrics = ctx.measureText(box.text.toUpperCase() || "TEXT " + box.id);
      const height = fontSize * 1.2;
      const width = Math.max(metrics.width + 20, 100);
      const top = y - height / 2;
      const left = x - width / 2;

      // Check resize handle hit (bottom-right)
      const handleSize = 20; // Larger hit area
      const handleX = left + width;
      const handleY = top + height;

      if (Math.abs(clickX - handleX) < handleSize && Math.abs(clickY - handleY) < handleSize) {
        resizingTextBox = box;
        highlightTextBox(box.id);
        return;
      }
    }

    // Find clicked text box (reverse order to prioritize top boxes)
    for (let i = textBoxes.length - 1; i >= 0; i--) {
      const box = textBoxes[i];
      const x = (box.x / 100) * canvas.width;
      const y = (box.y / 100) * canvas.height;
      const fontSize = box.fontSize || parseInt(globalFontSizeInput.value);

      // More accurate hit detection based on text size
      ctx.font = `bold ${fontSize}px Impact, Arial Black, sans-serif`;
      const metrics = ctx.measureText(box.text.toUpperCase() || "TEXT " + box.id);
      const height = fontSize * 1.2;
      const width = Math.max(metrics.width + 20, 100);

      // Simple bounding box check
      const halfWidth = width / 2;
      const halfHeight = height / 2;

      if (
        clickX >= x - halfWidth &&
        clickX <= x + halfWidth &&
        clickY >= y - halfHeight &&
        clickY <= y + halfHeight
      ) {
        draggedTextBox = box;
        dragOffset = { x: clickX - x, y: clickY - y }; // Store offset from center
        highlightTextBox(box.id);
        break;
      }
    }
  });

  canvas.addEventListener("mousemove", (e) => {
    if (!editMode || (!draggedTextBox && !resizingTextBox) || !ctx) return;

    const rect = canvas.getBoundingClientRect();
    const scaleX = canvas.width / rect.width;
    const scaleY = canvas.height / rect.height;
    const mouseX = (e.clientX - rect.left) * scaleX;
    const mouseY = (e.clientY - rect.top) * scaleY;

    if (resizingTextBox) {
      // Resize logic: distance from center determines font size
      const _fontSize = resizingTextBox.fontSize || parseInt(globalFontSizeInput.value);
      const _x = (resizingTextBox.x / 100) * canvas.width;
      const y = (resizingTextBox.y / 100) * canvas.height;

      // Calculate new font size based on mouse Y distance from center
      const dy = mouseY - y;
      // Assume handle is at bottom (dy positive), roughly half height
      // New height ~= dy * 2
      // New font size ~= new height / 1.2
      let newFontSize = Math.abs(dy * 2) / 1.2;
      newFontSize = Math.max(10, Math.min(200, newFontSize));

      resizingTextBox.fontSize = newFontSize;

      // If this is the currently selected global override, update slider?
      // Maybe better to just set per-box property

      renderTextBoxControls();
      drawMeme();
      return;
    }

    if (draggedTextBox) {
      // Move logic
      // We stored offset from center, so new center = mouse - offset
      // But we want to store percentage

      const newX = mouseX - dragOffset.x; // Exact pixel position of center
      const newY = mouseY - dragOffset.y; // Exact pixel position of center

      draggedTextBox.x = (newX / canvas.width) * 100;
      draggedTextBox.y = (newY / canvas.height) * 100;

      // Clamp to canvas? Maybe let them drag off slightly
      draggedTextBox.x = Math.max(-10, Math.min(110, draggedTextBox.x));
      draggedTextBox.y = Math.max(-10, Math.min(110, draggedTextBox.y));

      renderTextBoxControls();
      drawMeme();
    }
  });

  canvas.addEventListener("mouseup", () => {
    draggedTextBox = null;
    resizingTextBox = null;
  });

  canvas.addEventListener("mouseleave", () => {
    draggedTextBox = null;
    resizingTextBox = null;
  });

  // Image upload handler
  imageUpload.addEventListener("change", (e) => {
    const file = (e.target as HTMLInputElement).files?.[0];
    if (!file) return;

    const reader = new FileReader();
    reader.onload = (event) => {
      const img = new Image();
      img.onload = () => {
        currentImg = img;
        initializeTextBoxes();
        document.querySelectorAll(".meme-template").forEach((t) => t.classList.remove("selected"));
      };
      img.src = event.target?.result as string;
    };
    reader.readAsDataURL(file);
  });

  // Global settings
  [globalFontSizeInput, globalStrokeWidthInput, globalTextColorInput].forEach((el) => {
    el?.addEventListener("input", () => {
      drawMeme();
      if (globalFontSizeValue) {
        globalFontSizeValue.textContent = `${globalFontSizeInput.value}px`;
      }
      if (globalStrokeWidthValue) {
        globalStrokeWidthValue.textContent = `${globalStrokeWidthInput.value}px`;
      }
    });
  });

  addTextBoxBtn?.addEventListener("click", addTextBox);

  resetPositionsBtn?.addEventListener("click", () => {
    if (confirm("Reset all text positions to default?")) {
      const currentMemeId = document
        .querySelector(".meme-template.selected")
        ?.getAttribute("data-id");
      initializeTextBoxes(currentMemeId || undefined);
    }
  });

  // Download handler
  downloadBtn?.addEventListener("click", () => {
    const link = document.createElement("a");
    const timestamp = new Date().getTime();
    link.download = `meme-${timestamp}.png`;
    link.href = canvas.toDataURL();
    link.click();
  });

  // Initialize
  window.addEventListener("load", () => {
    // Load first meme by default
    if (allMemes.length > 0) {
      loadMemeTemplate(allMemes[0].localUrl, allMemes[0].id);
    }
  });
</script>
