---
import memesData from "../data/memes.json";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Meme Generator">
  <div class="space-y-12">
    <div class="animate-float mb-12 text-center">
      <div
        class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-2xl bg-linear-to-br from-blue-500 to-violet-500 text-4xl shadow-lg shadow-blue-500/30"
      >
        üê∏
      </div>
      <h1
        class="mb-4 bg-linear-to-r from-blue-400 via-violet-400 to-fuchsia-400 bg-clip-text text-5xl font-bold text-transparent"
      >
        Meme Generator
      </h1>
      <p class="text-xl text-slate-400">Create meme masterpieces with custom text overlays.</p>
    </div>

    <div
      id="meme-generator-container"
      class="grid grid-cols-1 items-start gap-8 lg:grid-cols-2"
      data-memes={JSON.stringify(memesData)}
    >
      <!-- Preview Area -->
      <div
        class="sticky top-8 overflow-hidden rounded-2xl border border-slate-700/50 bg-slate-800/50 p-0 shadow-2xl backdrop-blur-sm"
      >
        <div class="flex items-center justify-between border-b border-white/10 p-4">
          <h2 class="text-lg font-bold text-white">Preview</h2>
          <div class="flex gap-2">
            <button
              id="toggle-edit-mode"
              class="rounded-lg bg-slate-700 px-4 py-2 text-sm font-bold text-white transition-all hover:bg-slate-600"
              title="Toggle text editing on canvas"
            >
              ‚úèÔ∏è Edit Mode
            </button>
            <button
              id="download-btn"
              class="rounded-lg bg-linear-to-r from-blue-500 to-violet-500 px-10 py-2 text-sm font-bold text-white shadow-lg transition-all hover:from-blue-600 hover:to-violet-600 sm:w-auto"
            >
              üíæ Download
            </button>
          </div>
        </div>
        <div
          id="canvas-wrapper"
          class="relative flex aspect-square items-center justify-center bg-slate-900/50 p-4"
        >
          <canvas
            id="meme-canvas"
            class="max-h-full max-w-full cursor-default rounded-lg shadow-2xl"></canvas>
          <div
            id="edit-hint"
            class="absolute top-8 left-1/2 hidden -translate-x-1/2 transform rounded-lg bg-blue-500 px-4 py-2 text-sm font-semibold text-white shadow-lg"
          >
            Click on text to move it around
          </div>
        </div>
      </div>

      <!-- Controls Area -->
      <div class="space-y-6">
        <!-- Image Source -->
        <div
          class="rounded-2xl border border-slate-700/50 bg-slate-800/50 p-6 shadow-2xl backdrop-blur-sm"
        >
          <h3 class="mb-4 flex items-center gap-2 text-lg font-bold text-white">
            <span>üñºÔ∏è</span> Image Source
          </h3>
          <div class="space-y-4">
            <label class="block">
              <span class="mb-2 block text-sm font-semibold tracking-wider text-slate-400 uppercase"
                >Upload Your Own Image</span
              >
              <input
                type="file"
                id="image-upload"
                accept="image/*"
                class="block w-full cursor-pointer text-sm text-slate-400 file:mr-4 file:rounded-full file:border-0 file:bg-linear-to-r file:from-blue-500 file:to-violet-500 file:px-4 file:py-2 file:text-sm file:font-bold file:text-white hover:file:opacity-90"
              />
            </label>

            <div class="border-t border-white/5 pt-4">
              <div class="mb-3 flex items-center justify-between">
                <span class="text-sm font-semibold tracking-wider text-slate-400 uppercase"
                  >Popular Meme Templates</span
                >
                <button
                  id="refresh-memes"
                  class="rounded-full bg-slate-700 px-3 py-1 text-xs text-white transition-all hover:bg-slate-600"
                >
                  üîÑ Refresh
                </button>
              </div>

              <!-- Search Box -->
              <input
                type="text"
                id="meme-search"
                placeholder="Search memes..."
                class="mb-3 w-full rounded-lg border border-white/10 bg-slate-900/50 px-3 py-2 text-sm text-white transition-all focus:ring-2 focus:ring-blue-500/50 focus:outline-none"
              />

              <!-- Loading State -->
              <div id="memes-loading" class="py-8 text-center">
                <div
                  class="inline-block h-8 w-8 animate-spin rounded-full border-b-2 border-blue-500"
                >
                </div>
                <p class="mt-2 text-sm text-slate-400">Loading memes...</p>
              </div>

              <!-- Memes Grid -->
              <div
                id="memes-grid"
                class="custom-scrollbar grid hidden max-h-[500px] grid-cols-3 gap-2 overflow-y-auto pr-2"
              >
                <!-- Memes will be loaded here -->
              </div>
            </div>
          </div>
        </div>

        <!-- Text Boxes Manager -->
        <div
          class="rounded-2xl border border-slate-700/50 bg-slate-800/50 p-6 shadow-2xl backdrop-blur-sm"
        >
          <div class="mb-4 flex items-center justify-between">
            <h3 class="flex items-center gap-2 text-lg font-bold text-white">
              <span>‚úçÔ∏è</span> Text Boxes
            </h3>
            <button
              id="add-text-box"
              class="rounded-lg bg-blue-600 px-3 py-1 text-sm font-bold text-white transition-all hover:bg-blue-700"
            >
              + Add Text
            </button>
          </div>

          <div id="text-boxes-container" class="space-y-4">
            <!-- Text boxes will be dynamically added here -->
          </div>
        </div>

        <!-- Global Text Settings -->
        <div
          class="rounded-2xl border border-slate-700/50 bg-slate-800/50 p-6 shadow-2xl backdrop-blur-sm"
        >
          <h3 class="mb-4 flex items-center gap-2 text-lg font-bold text-white">
            <span>üé®</span> Global Text Settings
          </h3>
          <div class="space-y-4">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label
                  class="mb-2 block text-sm font-semibold tracking-wider text-slate-400 uppercase"
                  >Font Size</label
                >
                <input
                  type="range"
                  id="global-font-size"
                  min="20"
                  max="100"
                  value="40"
                  class="w-full accent-blue-500"
                />
                <span id="global-font-size-value" class="text-xs text-slate-500">40px</span>
              </div>
              <div>
                <label
                  class="mb-2 block text-sm font-semibold tracking-wider text-slate-400 uppercase"
                  >Text Color</label
                >
                <input
                  type="color"
                  id="global-text-color"
                  value="#ffffff"
                  class="h-10 w-full cursor-pointer rounded border border-white/10 bg-transparent"
                />
              </div>
            </div>

            <div>
              <label
                class="mb-2 block text-sm font-semibold tracking-wider text-slate-400 uppercase"
                >Stroke Width</label
              >
              <input
                type="range"
                id="global-stroke-width"
                min="0"
                max="10"
                value="3"
                class="w-full accent-blue-500"
              />
              <span id="global-stroke-width-value" class="text-xs text-slate-500">3px</span>
            </div>

            <div class="pt-2">
              <button
                id="reset-positions"
                class="w-full rounded-lg bg-slate-700 px-4 py-2 text-sm font-bold text-white transition-all hover:bg-slate-600"
              >
                üîÑ Reset All Positions
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .custom-scrollbar::-webkit-scrollbar {
    width: 8px;
  }

  .custom-scrollbar::-webkit-scrollbar-track {
    background: rgba(15, 23, 42, 0.5);
    border-radius: 4px;
  }

  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(100, 116, 139, 0.5);
    border-radius: 4px;
  }

  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(100, 116, 139, 0.7);
  }

  .meme-template {
    transition: all 0.2s;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .meme-template:hover {
    transform: scale(1.05);
    z-index: 10;
  }

  .meme-template.selected {
    ring: 2px;
    ring-color: rgb(59, 130, 246);
  }

  .meme-template img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .meme-name {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    padding: 8px 4px 4px;
    font-size: 0.65rem;
    color: white;
    text-align: center;
    opacity: 0;
    transition: opacity 0.2s;
  }

  .meme-template:hover .meme-name {
    opacity: 1;
  }

  .text-box-card {
    transition: all 0.2s;
  }

  .text-box-card.active {
    border-color: rgb(59, 130, 246);
    background: rgba(59, 130, 246, 0.1);
  }

  #meme-canvas.edit-mode {
    cursor: move;
  }
</style>

