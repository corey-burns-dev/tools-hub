---
import Button from "@/components/ui/Button.astro";
import ToolCard from "@/components/ui/ToolCard.astro";
import ToolPage from "@/components/ui/ToolPage.astro";
import memesData from "../data/memes.json";
import Layout from "../layouts/Layout.astro";

// Pre-serialize memes for client-side
const memesJson = JSON.stringify(memesData);
---

<Layout title="Meme Generator">
  <ToolPage description="Create viral memes with ease using our interactive generator.">
    <div
      id="meme-generator-container"
      class="grid grid-cols-1 items-start gap-8 lg:grid-cols-2"
      data-memes={memesJson}
    >
      <!-- Preview Area -->
      <div class="order-2 lg:sticky lg:top-8">
        <ToolCard title="Preview" step="02.">
          <div slot="header-actions" class="flex gap-2">
            <Button
              id="toggle-edit-mode"
              variant="secondary"
              size="sm"
              title="Toggle text editing on canvas"
            >
              ‚úèÔ∏è Edit Mode
            </Button>
            <Button id="download-btn" variant="primary" size="sm"> üíæ Save </Button>
          </div>

          <div
            id="canvas-wrapper"
            class="relative flex aspect-square items-center justify-center rounded-xl bg-black/40 p-4 shadow-inner"
          >
            <canvas
              id="meme-canvas"
              class="max-h-full max-w-full cursor-default rounded-lg shadow-2xl transition-all"
            ></canvas>
            <div
              id="edit-hint"
              class="animate-in fade-in zoom-in absolute top-8 left-1/2 hidden -translate-x-1/2 transform rounded-full bg-blue-600 px-6 py-2 text-sm font-bold text-white shadow-xl duration-300"
            >
              Drag text to move/resize
            </div>
          </div>
        </ToolCard>
      </div>

      <!-- Controls Area -->
      <div class="order-1 space-y-8">
        <!-- Image Source -->
        <ToolCard title="Image Source" step="01.">
          <div class="space-y-6">
            <div>
              <label
                class="mb-3 block text-[10px] font-bold tracking-widest text-slate-500 uppercase"
                >Upload Image</label
              >
              <input
                type="file"
                id="image-upload"
                accept="image/*"
                class="w-full text-xs text-slate-400 transition-all file:mr-4 file:rounded-full file:border-0 file:bg-blue-600 file:px-4 file:py-2 file:text-[10px] file:font-bold file:tracking-widest file:text-white file:uppercase hover:file:bg-blue-500 active:file:bg-blue-700"
              />
            </div>

            <div class="border-t border-white/5 pt-6">
              <div class="mb-4 flex items-center justify-between">
                <span class="text-[10px] font-bold tracking-widest text-slate-500 uppercase"
                  >Templates</span
                >
                <Button id="refresh-memes" variant="ghost" size="sm" class="h-7 text-[10px]">
                  üîÑ REFRESH
                </Button>
              </div>

              <!-- Search Box -->
              <input
                type="text"
                id="meme-search"
                placeholder="Search memes..."
                class="mb-4 w-full"
              />

              <!-- Loading State -->
              <div id="memes-loading" class="py-12 text-center">
                <div
                  class="inline-block h-8 w-8 animate-spin rounded-full border-2 border-slate-700 border-t-blue-500"
                >
                </div>
                <p class="mt-4 text-xs font-bold tracking-widest text-slate-500 uppercase">
                  Loading memes...
                </p>
              </div>

              <!-- Memes Grid -->
              <div
                id="memes-grid"
                class="custom-scrollbar grid hidden max-h-[360px] auto-cols-[160px] grid-flow-col grid-rows-2 gap-3 overflow-x-auto overflow-y-hidden scroll-smooth pr-2 pb-4"
              >
                <!-- Memes will be loaded here -->
              </div>
            </div>
          </div>
        </ToolCard>

        <!-- Text Boxes Manager -->
        <ToolCard title="Text Boxes" step="03.">
          <div slot="header-actions" class="flex gap-2">
            <Button id="reset-text-boxes" variant="ghost" size="sm" class="h-7 text-[10px]">
              RESET
            </Button>
            <Button id="add-text-box" variant="primary" size="sm" class="h-7 text-[10px]">
              + ADD TEXT
            </Button>
          </div>

          <div
            id="text-boxes-container"
            class="space-y-4 rounded-xl border border-white/5 bg-black/20 p-5 shadow-inner"
          >
            <!-- Text boxes will be dynamically added here -->
          </div>
        </ToolCard>

        <!-- Global Text Settings -->
        <ToolCard title="Style Settings" step="04.">
          <div class="space-y-6">
            <div class="grid grid-cols-2 gap-6">
              <div class="space-y-2">
                <label class="text-[10px] font-bold tracking-widest text-slate-500 uppercase"
                  >Font Size</label
                >
                <input
                  type="range"
                  id="global-font-size"
                  min="20"
                  max="100"
                  value="40"
                  class="w-full accent-blue-500"
                />
                <div class="flex justify-between font-mono text-[10px] text-slate-600">
                  <span>20px</span>
                  <span id="global-font-size-value" class="font-bold text-blue-400">40px</span>
                  <span>100px</span>
                </div>
              </div>
              <div class="space-y-2">
                <label class="text-[10px] font-bold tracking-widest text-slate-500 uppercase"
                  >Color</label
                >
                <input
                  type="color"
                  id="global-text-color"
                  value="#ffffff"
                  class="h-10 w-full cursor-pointer rounded-xl border border-white/10 bg-black/20 p-1"
                />
              </div>
            </div>

            <div class="space-y-2">
              <label class="text-[10px] font-bold tracking-widest text-slate-500 uppercase"
                >Outline</label
              >
              <input
                type="range"
                id="global-stroke-width"
                min="0"
                max="10"
                value="3"
                class="w-full accent-blue-500"
              />
              <div class="flex justify-between font-mono text-[10px] text-slate-600">
                <span>0px</span>
                <span id="global-stroke-width-value" class="font-bold text-blue-400">3px</span>
                <span>10px</span>
              </div>
            </div>

            <div class="pt-2">
              <Button id="reset-positions" variant="secondary" class="w-full">
                üîÑ Reset All Positions
              </Button>
            </div>
          </div>
        </ToolCard>
      </div>
    </div>
  </ToolPage>
</Layout>

<style>
  .custom-scrollbar::-webkit-scrollbar {
    height: 6px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(59, 130, 246, 0.3);
    border-radius: 10px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(59, 130, 246, 0.5);
  }

  .meme-template {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    position: relative;
    border-radius: 12px;
    overflow: hidden;
  }

  .meme-template:hover {
    transform: translateY(-4px);
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.3),
      0 4px 6px -2px rgba(0, 0, 0, 0.1);
  }

  .meme-template.selected {
    border-color: rgb(59, 130, 246);
    box-shadow:
      0 0 0 2px rgb(59, 130, 246),
      0 10px 15px -3px rgba(59, 130, 246, 0.3);
  }

  .meme-template img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .meme-name {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
    padding: 12px 8px 6px;
    font-size: 10px;
    font-weight: 700;
    color: white;
    text-align: center;
    opacity: 0;
    transition: opacity 0.3s;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .meme-template:hover .meme-name {
    opacity: 1;
  }

  /* Target dynamically generated cards */
  :global(.text-box-card.active) {
    border-color: rgba(59, 130, 246, 0.5) !important;
    background: rgba(59, 130, 246, 0.05) !important;
  }

  #meme-canvas.edit-mode {
    cursor: move;
    box-shadow:
      0 0 0 2px rgb(59, 130, 246),
      0 20px 25px -5px rgba(0, 0, 0, 0.5);
  }
</style>

