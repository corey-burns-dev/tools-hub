---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Password Generator">
  <div class="container mx-auto px-4 py-8">
    <div class="mx-auto max-w-5xl">
      <div class="mb-8 flex items-center gap-4">
        <div
          class="flex h-16 w-16 items-center justify-center rounded-2xl bg-linear-to-br from-blue-500 to-violet-500 text-4xl shadow-xl shadow-blue-500/20"
        >
          üîê
        </div>
        <div>
          <h1 class="mb-2 text-4xl font-bold text-white">Password Generator</h1>
          <p class="text-slate-400">
            Generate secure, random passwords to keep your accounts safe.
          </p>
        </div>
      </div>

      <div class="grid gap-6 lg:grid-cols-3">
        <!-- Controls Panel -->
        <div class="lg:col-span-1">
          <div
            class="rounded-2xl border border-slate-700/50 bg-slate-800/50 p-6 shadow-2xl backdrop-blur-sm"
          >
            <h2 class="mb-6 text-xl font-bold text-white">Settings</h2>

            <!-- Length Slider -->
            <div class="mb-6">
              <div class="mb-3 flex items-center justify-between">
                <label for="length-slider" class="text-sm font-medium text-slate-300"
                  >Password Length</label
                >
                <span
                  id="length-value"
                  class="rounded-lg bg-blue-600/20 px-3 py-1 font-mono text-lg font-bold text-blue-400"
                  >16</span
                >
              </div>
              <input
                type="range"
                id="length-slider"
                min="8"
                max="64"
                value="16"
                class="w-full accent-blue-500"
              />
              <div class="mt-1 flex justify-between text-xs text-slate-500">
                <span>8</span>
                <span>64</span>
              </div>
            </div>

            <!-- Character Types -->
            <div class="mb-6 space-y-3">
              <label
                class="flex cursor-pointer items-center gap-3 rounded-lg bg-slate-900/50 p-3 transition-all hover:bg-slate-900"
              >
                <input
                  type="checkbox"
                  id="uppercase"
                  checked
                  class="h-5 w-5 rounded border-slate-600 bg-slate-800 text-blue-500 focus:ring-blue-500"
                />
                <div class="flex-1">
                  <div class="text-sm font-medium text-slate-300">Uppercase</div>
                  <div class="font-mono text-xs text-slate-500">A-Z</div>
                </div>
              </label>

              <label
                class="flex cursor-pointer items-center gap-3 rounded-lg bg-slate-900/50 p-3 transition-all hover:bg-slate-900"
              >
                <input
                  type="checkbox"
                  id="lowercase"
                  checked
                  class="h-5 w-5 rounded border-slate-600 bg-slate-800 text-blue-500 focus:ring-blue-500"
                />
                <div class="flex-1">
                  <div class="text-sm font-medium text-slate-300">Lowercase</div>
                  <div class="font-mono text-xs text-slate-500">a-z</div>
                </div>
              </label>

              <label
                class="flex cursor-pointer items-center gap-3 rounded-lg bg-slate-900/50 p-3 transition-all hover:bg-slate-900"
              >
                <input
                  type="checkbox"
                  id="numbers"
                  checked
                  class="h-5 w-5 rounded border-slate-600 bg-slate-800 text-blue-500 focus:ring-blue-500"
                />
                <div class="flex-1">
                  <div class="text-sm font-medium text-slate-300">Numbers</div>
                  <div class="font-mono text-xs text-slate-500">0-9</div>
                </div>
              </label>

              <label
                class="flex cursor-pointer items-center gap-3 rounded-lg bg-slate-900/50 p-3 transition-all hover:bg-slate-900"
              >
                <input
                  type="checkbox"
                  id="symbols"
                  checked
                  class="h-5 w-5 rounded border-slate-600 bg-slate-800 text-blue-500 focus:ring-blue-500"
                />
                <div class="flex-1">
                  <div class="text-sm font-medium text-slate-300">Symbols</div>
                  <div class="font-mono text-xs text-slate-500">!@#$%^&*</div>
                </div>
              </label>
            </div>

            <!-- Additional Options -->
            <div class="mb-6 space-y-2">
              <label
                class="flex cursor-pointer items-center gap-3 rounded-lg bg-slate-900/30 p-2.5 transition-all hover:bg-slate-900/50"
              >
                <input
                  type="checkbox"
                  id="exclude-ambiguous"
                  class="h-4 w-4 rounded border-slate-600 bg-slate-800 text-blue-500 focus:ring-blue-500"
                />
                <div class="text-sm text-slate-300">Exclude Ambiguous (0,O,l,I)</div>
              </label>

              <label
                class="flex cursor-pointer items-center gap-3 rounded-lg bg-slate-900/30 p-2.5 transition-all hover:bg-slate-900/50"
              >
                <input
                  type="checkbox"
                  id="no-duplicate"
                  class="h-4 w-4 rounded border-slate-600 bg-slate-800 text-blue-500 focus:ring-blue-500"
                />
                <div class="text-sm text-slate-300">No Duplicate Characters</div>
              </label>
            </div>

            <!-- Number of Passwords -->
            <div class="mb-6">
              <label for="password-count" class="mb-2 block text-sm font-medium text-slate-300"
                >Number of Passwords</label
              >
              <input
                type="number"
                id="password-count"
                min="1"
                max="20"
                value="1"
                class="w-full rounded-lg border border-slate-700 bg-slate-900/50 px-4 py-2 text-white outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
              />
            </div>

            <!-- Generate Button -->
            <button
              id="generate-btn"
              class="w-full transform rounded-xl bg-linear-to-r from-blue-500 to-violet-500 py-4 font-bold text-white shadow-lg transition-all duration-200 hover:scale-105 hover:from-blue-600 hover:to-violet-600 hover:shadow-xl"
            >
              üé≤ Generate Passwords
            </button>
          </div>
        </div>

        <!-- Results Panel -->
        <div class="lg:col-span-2">
          <div
            class="rounded-2xl border border-slate-700/50 bg-slate-800/50 p-6 shadow-2xl backdrop-blur-sm"
          >
            <div class="mb-6 flex items-center justify-between">
              <h2 class="text-xl font-bold text-white">Generated Passwords</h2>
              <button
                id="copy-all-btn"
                class="hidden rounded-lg bg-slate-700 px-4 py-2 text-sm font-semibold text-white transition-all duration-200 hover:bg-slate-600"
              >
                üìã Copy All
              </button>
            </div>

            <!-- Password Results -->
            <div id="password-results" class="space-y-3">
              <div class="flex min-h-75 flex-col items-center justify-center text-slate-500">
                <div class="mb-4 text-6xl">üîê</div>
                <p class="text-center">Configure your settings and click Generate</p>
              </div>
            </div>
          </div>

          <!-- Password Strength Tips -->
          <div
            class="mt-6 rounded-2xl border border-slate-700/50 bg-slate-800/50 p-6 shadow-2xl backdrop-blur-sm"
          >
            <h3 class="mb-4 flex items-center gap-2 text-lg font-bold text-white">
              <span>üí°</span> Password Security Tips
            </h3>
            <ul class="space-y-2 text-sm text-slate-400">
              <li class="flex items-start gap-2">
                <span class="text-green-400">‚úì</span>
                <span>Use at least 12 characters for better security</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-400">‚úì</span>
                <span>Mix uppercase, lowercase, numbers, and symbols</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-400">‚úì</span>
                <span>Never reuse passwords across different accounts</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-400">‚úì</span>
                <span>Use a password manager to store your passwords</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-400">‚úì</span>
                <span>Enable two-factor authentication when available</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Character sets
  const UPPERCASE = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
  const LOWERCASE = "abcdefghijklmnopqrstuvwxyz";
  const NUMBERS = "0123456789";
  const SYMBOLS = "!@#$%^&*()_+-=[]{}|;:,.<>?";
  const AMBIGUOUS = "0O1lI";

  // State
  let generatedPasswords: string[] = [];

  // DOM Elements
  const lengthSlider = document.getElementById("length-slider") as HTMLInputElement;
  const lengthValue = document.getElementById("length-value") as HTMLSpanElement;
  const uppercaseCheck = document.getElementById("uppercase") as HTMLInputElement;
  const lowercaseCheck = document.getElementById("lowercase") as HTMLInputElement;
  const numbersCheck = document.getElementById("numbers") as HTMLInputElement;
  const symbolsCheck = document.getElementById("symbols") as HTMLInputElement;
  const excludeAmbiguousCheck = document.getElementById("exclude-ambiguous") as HTMLInputElement;
  const noDuplicateCheck = document.getElementById("no-duplicate") as HTMLInputElement;
  const passwordCountInput = document.getElementById("password-count") as HTMLInputElement;
  const generateBtn = document.getElementById("generate-btn") as HTMLButtonElement;
  const passwordResults = document.getElementById("password-results") as HTMLDivElement;
  const copyAllBtn = document.getElementById("copy-all-btn") as HTMLButtonElement;

  // Update length display
  lengthSlider?.addEventListener("input", () => {
    if (lengthValue) {
      lengthValue.textContent = lengthSlider.value;
    }
  });

  // Generate password function
  function generatePassword(
    length: number,
    options: {
      uppercase: boolean;
      lowercase: boolean;
      numbers: boolean;
      symbols: boolean;
      excludeAmbiguous: boolean;
      noDuplicate: boolean;
    }
  ): string {
    let charset = "";

    if (options.uppercase) charset += UPPERCASE;
    if (options.lowercase) charset += LOWERCASE;
    if (options.numbers) charset += NUMBERS;
    if (options.symbols) charset += SYMBOLS;

    if (!charset) return "";

    // Remove ambiguous characters if requested
    if (options.excludeAmbiguous) {
      charset = charset
        .split("")
        .filter((char) => !AMBIGUOUS.includes(char))
        .join("");
    }

    if (charset.length === 0) return "Error: No characters available";

    let password = "";
    const charsetArray = charset.split("");

    if (options.noDuplicate && length > charsetArray.length) {
      return "Error: Not enough unique characters";
    }

    const randomValues = new Uint32Array(length);
    window.crypto.getRandomValues(randomValues);

    for (let i = 0; i < length; i++) {
      if (options.noDuplicate) {
        const availableChars = charsetArray.filter((char) => !password.includes(char));
        if (availableChars.length === 0) break;
        const randomIndex = randomValues[i] % availableChars.length;
        password += availableChars[randomIndex];
      } else {
        const randomIndex = randomValues[i] % charsetArray.length;
        password += charsetArray[randomIndex];
      }
    }

    return password;
  }

  // Calculate password strength
  function calculateStrength(password: string): { score: number; label: string; color: string } {
    let score = 0;

    if (password.length >= 8) score += 1;
    if (password.length >= 12) score += 1;
    if (password.length >= 16) score += 1;
    if (/[a-z]/.test(password)) score += 1;
    if (/[A-Z]/.test(password)) score += 1;
    if (/[0-9]/.test(password)) score += 1;
    if (/[^a-zA-Z0-9]/.test(password)) score += 1;

    if (score <= 2) return { score, label: "Weak", color: "text-red-400" };
    if (score <= 4) return { score, label: "Fair", color: "text-orange-400" };
    if (score <= 5) return { score, label: "Good", color: "text-yellow-400" };
    if (score <= 6) return { score, label: "Strong", color: "text-green-400" };
    return { score, label: "Very Strong", color: "text-emerald-400" };
  }

  // Copy to clipboard
  async function copyToClipboard(text: string, button: HTMLButtonElement) {
    try {
      await navigator.clipboard.writeText(text);
      const originalText = button.innerHTML;
      button.innerHTML = "‚úì Copied!";
      button.classList.add("bg-green-600");
      setTimeout(() => {
        button.innerHTML = originalText;
        button.classList.remove("bg-green-600");
      }, 2000);
    } catch (err) {
      console.error("Failed to copy:", err);
    }
  }

  // Generate passwords
  generateBtn?.addEventListener("click", () => {
    const length = parseInt(lengthSlider?.value || "16", 10);
    const count = parseInt(passwordCountInput?.value || "1", 10);

    const options = {
      uppercase: uppercaseCheck?.checked || false,
      lowercase: lowercaseCheck?.checked || false,
      numbers: numbersCheck?.checked || false,
      symbols: symbolsCheck?.checked || false,
      excludeAmbiguous: excludeAmbiguousCheck?.checked || false,
      noDuplicate: noDuplicateCheck?.checked || false,
    };

    // Validate at least one character type is selected
    if (!options.uppercase && !options.lowercase && !options.numbers && !options.symbols) {
      passwordResults.innerHTML = `
        <div class="p-6 text-center border rounded-lg border-red-500/50 bg-red-500/10">
          <div class="mb-2 text-3xl">‚ö†Ô∏è</div>
          <p class="text-red-400">Please select at least one character type</p>
        </div>
      `;
      return;
    }

    // Generate passwords
    generatedPasswords = [];
    for (let i = 0; i < Math.min(count, 20); i++) {
      generatedPasswords.push(generatePassword(length, options));
    }

    // Display results
    passwordResults.innerHTML = generatedPasswords
      .map((pwd, index) => {
        const isError = pwd.startsWith("Error:");
        const strength = isError
          ? { score: 0, label: "Invalid", color: "text-red-500" }
          : calculateStrength(pwd);

        return `
          <div class="relative p-4 transition-all border rounded-lg group border-slate-700/50 bg-slate-900/50 hover:border-slate-600 hover:bg-slate-900">
            <div class="flex items-center justify-between mb-2">
              <div class="flex items-center gap-2">
                <span class="text-xs text-slate-500">#${index + 1}</span>
                <span class="text-xs font-semibold ${strength.color}">${strength.label}</span>
              </div>
              <div class="flex gap-1">
                ${Array.from({ length: 7 }, (_, i) => {
                  const filled = i < strength.score;
                  return `<div class="h-1.5 w-4 rounded-full ${filled ? strength.color.replace("text-", "bg-") : "bg-slate-700"}"></div>`;
                }).join("")}
              </div>
            </div>
            <div class="flex items-center gap-3 mb-3">
              <code class="flex-1 font-mono text-lg text-white break-all">${pwd}</code>
            </div>
            ${
              !isError
                ? `
            <button
              class="w-full px-4 py-2 text-sm font-semibold text-white transition-all duration-200 rounded-lg copy-btn bg-slate-700 hover:bg-slate-600"
              data-password="${pwd.replace(/"/g, "&quot;")}"
            >
              üìã Copy
            </button>
            `
                : ""
            }
          </div>
        `;
      })
      .join("");

    // Show copy all button if multiple passwords and no errors
    const hasError = generatedPasswords.some((p) => p.startsWith("Error:"));
    if (generatedPasswords.length > 1 && !hasError) {
      copyAllBtn?.classList.remove("hidden");
    } else {
      copyAllBtn?.classList.add("hidden");
    }
  });

  // Event Delegation for copy buttons
  passwordResults?.addEventListener("click", (e) => {
    const target = e.target as HTMLElement;
    const btn = target.closest(".copy-btn") as HTMLButtonElement;
    if (btn) {
      const password = btn.getAttribute("data-password");
      if (password) {
        copyToClipboard(password, btn);
      }
    }
  });

  // Copy all passwords
  copyAllBtn?.addEventListener("click", () => {
    const allPasswords = generatedPasswords.join("\n");
    copyToClipboard(allPasswords, copyAllBtn);
  });

  // Generate on page load
  generateBtn?.click();
</script>

<style>
  @reference "../styles/global.css";

  input[type="range"] {
    @apply h-2 cursor-pointer appearance-none rounded-lg bg-slate-700;
  }

  input[type="range"]::-webkit-slider-thumb {
    @apply h-5 w-5 cursor-pointer appearance-none rounded-full bg-blue-500 shadow-lg transition-all hover:bg-blue-400 hover:shadow-xl;
  }

  input[type="range"]::-moz-range-thumb {
    @apply h-5 w-5 cursor-pointer appearance-none rounded-full border-0 bg-blue-500 shadow-lg transition-all hover:bg-blue-400 hover:shadow-xl;
  }
</style>
