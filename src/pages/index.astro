      {
        Object.entries(tools).map(([category, categoryTools]) => (
          <section class="mb-12">
            <div class="mb-6 flex items-center gap-3">
              <span class="text-3xl">{categoryIcons[category]}</span>
              <h2 class="text-2xl font-bold text-white">{category}</h2>
              <div class="h-px flex-1 bg-linear-to-r from-white/20 to-transparent" />
            </div>

            <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
              {categoryTools.map((tool) => (
                <a
                  href={tool.href}
                  class="group relative overflow-hidden rounded-2xl border border-slate-700/50 bg-slate-800/50 p-6 backdrop-blur-sm transition-all duration-300 hover:scale-[1.02] hover:border-slate-600/50 hover:bg-slate-800/80 hover:shadow-xl hover:shadow-blue-500/10"
                >
                  {/* Status Badge */}
                  <div class="absolute top-3 right-3">
                    {tool.status === "working" ? (
                      <span class="flex items-center gap-1 rounded-full bg-green-500/20 px-2 py-1 text-xs font-medium text-green-400">
                        <span class="h-1.5 w-1.5 rounded-full bg-green-400" />
