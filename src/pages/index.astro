<Layout title="DevTools Premium">
	<main class="container mx-auto px-4 py-12 min-h-screen">
		<!-- Hero Section -->
		<div class="text-center mb-24 relative">
			<div
				class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-blue-500/20 rounded-full blur-[100px] -z-10 animate-pulse"
			>
			</div>

