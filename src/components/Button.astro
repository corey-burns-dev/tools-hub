---
interface Props {
  variant?: "primary" | "secondary" | "ghost";
  href?: string;
  type?: "button" | "submit" | "reset";
  class?: string;
  onclick?: string;
  [key: string]: any;
}

const {
  variant = "primary",
  href,
  type = "button",
  class: className,
  onclick,
  ...props
} = Astro.props;

const variants = {
  primary: "btn-primary",
  secondary: "btn-secondary",
  ghost: "btn-ghost",
};

const Tag = href ? "a" : "button";
---

<Tag
  href={href}
  type={!href ? type : undefined}
  class:list={[
    variants[variant],
    "inline-flex items-center justify-center gap-2",
    className,
  ]}
  onclick={onclick}
  {...props}
>
  <slot />
</Tag>
