---
interface Props {
  cols?: 1 | 2 | 3;
  class?: string;
}

const { cols = 2, class: className } = Astro.props;

const colClass =
  cols === 1
    ? "grid-cols-1"
    : cols === 3
      ? "grid-cols-1 lg:grid-cols-3"
      : "grid-cols-1 lg:grid-cols-2";
---

<div class:list={["ui-grid", colClass, className]}>
  <slot />
</div>
