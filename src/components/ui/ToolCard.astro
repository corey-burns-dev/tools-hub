---
import Card from "../Card.astro";

interface Props {
  title?: string;
  step?: string;
  class?: string;
  bodyClass?: string;
}

const { title, step, class: className, bodyClass } = Astro.props;
---

<Card title={title} step={step} class={className} bodyClass={bodyClass}>
  <slot name="header-actions" slot="header-actions" />
  <slot />
</Card>
