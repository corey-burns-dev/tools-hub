---
import Card from "./Card.astro";

interface Props {
  title?: string;
  step?: string;
  class?: string;
  [key: string]: any;
}

const { title, step, class: className, ...rest } = Astro.props;
---

<Card class={className} {...rest}>
  {
    title && (
      <header class="mb-6 flex flex-wrap items-center justify-between gap-4">
        <h2 class="flex items-center gap-3 text-2xl font-bold text-white">
          {step && <span class="font-mono text-sm tracking-wider text-blue-400/80">{step}</span>}
          <span>{title}</span>
        </h2>
        <slot name="header-actions" />
      </header>
    )
  }
  <div class="space-y-4">
    <slot />
  </div>
</Card>
