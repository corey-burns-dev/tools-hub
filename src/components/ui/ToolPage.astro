---
interface Props {
  title?: string;
  description?: string;
  class?: string;
}

const { title, description, class: className } = Astro.props;
---

<div class:list={["ui-page", className]}>
  {
    (title || description) && (
      <div class="ui-page-intro">
        {title && <h1 class="ui-page-title">{title}</h1>}
        {description && <p class="ui-page-description">{description}</p>}
      </div>
    )
  }
  <slot />
</div>
