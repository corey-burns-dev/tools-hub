---
interface Props {
  class?: string;
  [key: string]: any;
}

const { class: className = "", ...rest } = Astro.props;
---

<div
  class={`rounded-2xl border border-slate-200 bg-white p-5 shadow-sm
          dark:border-white/10 dark:bg-slate-900/40 dark:backdrop-blur-md ${className}`.trim()}
  {...rest}
>
  <slot />
</div>
