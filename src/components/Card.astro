---
interface Props {
  href?: string;
  class?: string;
  title?: string;
}

const { href, class: className, title, ...props } = Astro.props;

const Component = href ? "a" : "div";
const baseStyles = "card-glass block group text-main";
---

<Component href={href} class:list={[baseStyles, className]} title={title} {...props}>
  <slot />
  {/* Light reflection effect */}
  <div
    class="pointer-events-none absolute inset-0 bg-linear-to-tr from-white/5 via-transparent to-transparent opacity-0 transition-opacity duration-500 group-hover:opacity-100"
  >
  </div>
</Component>
