{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useImportType": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "files": {
    "includes": [
      "src/**/*",
      "astro.config.mjs",
      "tailwind.config.js",
      "postcss.config.js",
      "tsconfig.json",
      "package.json",
      "biome.json"
    ],
    "experimentalScannerIgnores": ["dist/**", "node_modules/**"]
  }
}
