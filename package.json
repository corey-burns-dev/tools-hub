{
  "name": "tools-hub",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "bun@1.2.22",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint-staged": "lint-staged",
    "check": "astro check && biome check .",
    "prepare": "husky",
    "predeploy": "bun run build",
    "deploy": "scripts/deploy-pages.sh",
    "deploy:prod": "scripts/deploy-pages.sh main"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro,json,md,css}": "biome check --write --no-errors-on-unmatched"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.7.0",
    "astro": "^5.17.1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@biomejs/biome": "^2.3.14",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "wrangler": "4"
  }
}
